<Window x:Class="ImageEditor.notes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageEditor"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="notes" Height="400" Width="400">
    <Grid Margin="0,0,-2,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <TextBox TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Name="tt"  FontSize="16" FontFamily="Monotype Corsiva" Margin="-1,3,1,-5" Grid.RowSpan="2" >
            <TextBox.Background>
                <ImageBrush ImageSource="Capture.png"/>
            </TextBox.Background>
        </TextBox>
        <Button Content="Save" FontSize="15" HorizontalAlignment="Left" Margin="291,249,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" FontFamily="Papyrus" Background="#FF060505" Foreground="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Click="Button_Click"/>
    </Grid>
</Window>
